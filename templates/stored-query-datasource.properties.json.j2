{
    "properties": {
{% set comma = joiner(",") %}
{% for property in item.properties %}
{{ comma() }}"{{ property.name }}": {
	"type": "{{property.type}}"
	{% if property.index is defined %}
	{{ comma() }}"index": {{property.index}}
	{% endif %}
}
{% endfor %},
      "dialogs":         { "type": "text", "analyzer": "{{ item.analyzer }}" }
{% for n in range(3) %}
     ,"agent{{ n }}":    { "type": "text", "analyzer": "{{ item.analyzer }}" }
     ,"customer{{ n }}": { "type": "text", "analyzer": "{{ item.analyzer }}"}
{% endfor %}
    }
}